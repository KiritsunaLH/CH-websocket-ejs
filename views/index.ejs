<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat</title>
    <link rel="stylesheet" href="style.css">
    
    <script src="./socket.io/socket.io.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>
<body>
    <h1> Chat</h1>
    <div id='chatContainer' class='container'>
        <div>
            <form id='dataUser'>
                <div>
                    <input id='userName' type="text" placeholder="Enter name">
                    <input id='userEmail' type="email" placeholder="Enter e-mail">
                    <input class="btn_submit" type="submit" value="log In">
                </div>
            </form>
        </div>
        <div>
            <div class="prodsCont">
                <h3>Add products</h3>
                <form id='dataProds'>
                    <div>
                        <input id='prodName' type="text" placeholder="Product name">
                        <input id='prodPrice' type="number" placeholder="Price">
                        <input id='prodImage' type="url" placeholder="Image url">
                        <button id='prodSend'>Add Product</button>
                    </div>
                </form>
                <table  class="table">
                    <thead>
                        <tr>
                        <th scope="col">ID#</th>
                        <th scope="col">Product</th>
                        <th scope="col">Price</th>
                        <th scope="col">Image</th>
                        </tr>
                    </thead>
                    <tbody id="productList">
                        <tr>

                        </tr>
                    </tbody>
                </table>
                <!-- </ul> -->
            </div>
            <div class="chatCont">
                <div>
                    <h3>Chat log</h3>
                    <input type="text" id='inputtext' placeholder="Input text">
                    <button id="sendmsj">Send</button>
                    <p id='textContainer'></p>
                </div>
                <div class='users'>
                    <div>
                        <h5>Connected Users</h5>
                    </div>
                    <ul id='userList'>
                        <li>

                        </li>
                    </ul>
                </div>
            </div>
            
        </div>
    </div>
    
<script src="./index.js"></script>



</body>
</html>